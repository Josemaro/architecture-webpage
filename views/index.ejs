<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mi Blog</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <h1>Mi Blog</h1>
    <a href="/new-post">Crear nuevo post</a>
    <ul>
        <% posts.forEach(post => { %>
            <li>
                <a href="/post/<%= post._id %>"><%= post.title %></a>
            </li>
        <% }); %>
    </ul>
</body>
</html>
